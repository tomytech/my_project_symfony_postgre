{% extends 'base.html.twig' %}

{% block body %}
    <h3>Informations de l'adresse n°{{ adress.id }}</h3>

    <div class="fr-mb-6v">
        <div class="fr-grid-row fr-grid-row--center fr-grid-row--gutters">
            <div class="fr-col-12 fr-col-md-5">
                <div class="fr-card fr-enlarge-link">
                    <div class="fr-card__body">
                        <h4 class="fr-card__title">
                            Adresse n°{{ adress.id }}
                        </h4>
                        <p class="fr-card__desc">
                            <b>Adresse</b> : {{ adress.adresse }}
                        </p>
                        <p class="fr-card__desc">
                            <b>Code postal</b> : {{ adress.cp }}
                        </p>
                        <p class="fr-card__desc">
                            <b>Ville</b> : {{ adress.ville }}
                        </p>
                        <p class="fr-card__desc">
                            <b>ID Utilisateur</b> : {{ adress.idu }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="fr-grid-row fr-grid-row--center fr-mb-6v">
        <a href="{{ path('app_adresses_index') }}" class="fr-btn">Retour à la liste</a>
    </div>

    <div class="fr-grid-row fr-grid-row--center fr-mb-6v">
        <a href="{{ path('app_adresses_edit', {'id': adress.id}) }}" class="fr-btn" style="background-color: #0D6EFD; color: white;">Modifier ses informations</a>
    </div>

    {{ include('adresses/_delete_form.html.twig') }}
{% endblock %}
