{% extends 'base.html.twig' %}

{% block title %}CRUD Adresses{% endblock %}

{% block body %}
    <h3>Liste des adresses</h3>

    <div class="fr-grid-row fr-grid-row--center">
        <div class="fr-mb-6v">
            <div class="fr-table" id="table-6689">
                <table>
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Adresse</th>
                        <th scope="col">Code postal</th>
                        <th scope="col">Ville</th>
                        <th scope="col">ID U.</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for adress in adresses %}
                        <tr>
                            <td>{{ adress.id }}</td>
                            <td>{{ adress.adresse }}</td>
                            <td>{{ adress.cp }}</td>
                            <td>{{ adress.ville }}</td>
                            <td>{{ adress.idu }}</td>
                            <td>
                                <a href="{{ path('app_adresses_show', {'id': adress.id}) }}" class="fr-btn">Afficher</a>
                                <a href="{{ path('app_adresses_edit', {'id': adress.id}) }}" class="fr-btn" style="background-color: #0D6EFD; color: white;">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucune adresse</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="fr-grid-row fr-grid-row--center fr-mb-6v">
        <a href="{{ path('app_adresses_new') }}" class="fr-btn" style="background-color: #198754; color: white;">Ajouter une adresse</a>
    </div>
{% endblock %}
