{% extends 'base.html.twig' %}

{% block body %}
    <h3>Informations de l'utilisateur n°{{ user.id }}</h3>

    <div class="fr-mb-6v">
        <div class="fr-grid-row fr-grid-row--center fr-grid-row--gutters">
            <div class="fr-col-12 fr-col-md-5">
                <div class="fr-card fr-enlarge-link">
                    <div class="fr-card__body">
                        <h4 class="fr-card__title">
                            Utilisateur n°{{ user.id }}
                        </h4>
                        <p class="fr-card__desc">
                            <b>Adresse email</b> : {{ user.email }}
                        </p>
                        <p class="fr-card__desc">
                            <b>Rôle</b> : {{ user.roles ? user.roles|json_encode : '' }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="fr-grid-row fr-grid-row--center fr-mb-6v">
        <a href="{{ path('app_users_index') }}" class="fr-btn">Retour à la liste</a>
    </div>

    <div class="fr-grid-row fr-grid-row--center fr-mb-6v">
        <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="fr-btn" style="background-color: #0D6EFD; color: white;">Modifier ses informations</a>
    </div>

    {{ include('users/_delete_form.html.twig') }}
{% endblock %}
